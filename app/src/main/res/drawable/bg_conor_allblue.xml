<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
	<!-- 实心 -->
	<solid android:color="#24BF5C" />
	<!-- 边框 -->
	<stroke
			android:width="1dp"
			android:color="#24BF5C" />
	<!-- 圆角 -->
	<corners android:radius="15dp" />
	<!-- 边距 -->
	<padding
	android:bottom="2dp"
	android:left="2dp"
	android:right="2dp"
	android:top="2dp" />
<!--	 渐变 -->
	<gradient
	android:angle="270"
	android:endColor="#24BF5C"
	android:startColor="#24BF5C" />
</shape>