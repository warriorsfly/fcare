<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">
	<data>
		<variable name="item" type="com.wxsoft.fcare.core.data.entity.TriggerRecord"/>
		<variable name="beforeEnd" type="Boolean"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:background="?attr/selectableItemBackground"
			android:layout_height="100dp">

		<ImageView
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginLeft="80dp"
				android:layout_width="30dp"
				android:id="@+id/icon"
				android:background="@{item.inTime.length()>0?@drawable/bg_conor_allblue:@drawable/bg_cornor_allgray}"
				android:layout_height="30dp"/>


		<View
				app:goneUnless="@{beforeEnd}"
				android:layout_width="2dp"
				android:id="@+id/top_line"
				android:background="@{item.inTime.length()>0?@color/color_green:@color/color_light_gray}"
				app:layout_constraintLeft_toLeftOf="@id/icon"
				app:layout_constraintRight_toRightOf="@id/icon"
				app:layout_constraintBottom_toTopOf="@+id/icon_lit"
				app:layout_constraintTop_toBottomOf="@id/icon"
				android:layout_height="0dp"/>

		<ImageView
				app:goneUnless="@{beforeEnd}"
				app:layout_constraintLeft_toLeftOf="@+id/top_line"
				app:layout_constraintRight_toRightOf="@+id/top_line"
				app:layout_constraintTop_toBottomOf="@+id/top_line"
				app:layout_constraintBottom_toTopOf="@+id/bottom_line"
				android:layout_width="10dp"
				android:id="@+id/icon_lit"
				android:background="@{item.pass?@drawable/bg_conor_allblue:@drawable/bg_cornor_allgray}"
				android:layout_height="10dp"/>


		<View
				app:goneUnless="@{beforeEnd}"
				android:layout_width="2dp"
				android:id="@+id/bottom_line"
				android:background="@{item.pass?@color/color_green:@color/color_light_gray}"
				app:layout_constraintLeft_toLeftOf="@id/icon_lit"
				app:layout_constraintRight_toRightOf="@id/icon_lit"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintTop_toBottomOf="@id/icon_lit"
				android:layout_height="0dp"/>


		<TextView
				android:id="@+id/in_time"
				tools:text="22:23"
				android:text="@{item.inTimeStr}"
				android:textColor="@{item.pass?@color/color_green:@color/pickerview_wheelview_textcolor_out}"
				android:layout_marginRight="15dp"
				app:layout_constraintTop_toTopOf="@+id/icon"
				app:layout_constraintRight_toLeftOf="@+id/icon"
				app:layout_constraintBottom_toBottomOf="@+id/icon"
				android:textSize="18sp"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<TextView
				android:id="@+id/title"
				android:textColor="@{item.pass?@color/color_green:@color/pickerview_wheelview_textcolor_out}"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toRightOf="@+id/icon"
				app:layout_constraintTop_toTopOf="@+id/icon"
				app:layout_constraintBottom_toBottomOf="@+id/icon"
				android:layout_marginLeft="15dp"
				tools:text="护士抽血时间"
				android:text="@{item.baseStationName}"
				android:textSize="18sp"
				/>

		<TextView
				app:goneUnless="@{beforeEnd}"
				android:id="@+id/out_time"
				tools:text="22:31"
				android:text="@{item.outTimeStr}"
				android:textColor="@color/pickerview_wheelview_textcolor_out"
				android:layout_marginRight="10dp"
				app:layout_constraintTop_toTopOf="@+id/icon_lit"
				app:layout_constraintRight_toLeftOf="@+id/icon_lit"
				app:layout_constraintBottom_toBottomOf="@+id/icon_lit"
				android:textSize="15sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<TextView
				app:goneUnless="@{beforeEnd}"
				android:id="@+id/cost_time"
				tools:text="耗时8分钟"
				android:text="@{item.costTime}"
				android:layout_marginLeft="30dp"
				android:textColor="@color/pickerview_wheelview_textcolor_out"
				app:layout_constraintTop_toTopOf="@+id/icon_lit"
				app:layout_constraintLeft_toRightOf="@+id/icon_lit"
				app:layout_constraintBottom_toBottomOf="@+id/icon_lit"
				android:textSize="15sp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

		<ImageView
				app:goneUnless="@{beforeEnd}"
				android:id="@+id/ic_1"
				android:layout_width="14dp"
				android:layout_height="14dp"
				android:src="@drawable/ic_common_clock"
				android:layout_marginRight="6dp"
				app:layout_constraintTop_toTopOf="@id/cost_time"
				app:layout_constraintRight_toLeftOf="@id/cost_time"
				app:layout_constraintBottom_toBottomOf="@id/cost_time"/>






	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>