<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.details.dominating.DoMinaViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.details.dominating.fragment.PatientManagerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/image"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/hello_blank_fragment"
                android:src="@drawable/ic_big_add"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"/>

        <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/goTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="218dp"
                android:text="点击添加病人"/>

        <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:goneUnless="@{viewModel.task.patients.length>0}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <android.support.v4.view.ViewPager
                    android:id="@+id/patPager"
                    android:background="@color/white"
                    app:goneUnless="@{viewModel.task.patients.length>0}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab"
                        app:tabMode="fixed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </android.support.v4.view.ViewPager>

        </android.support.v4.widget.SwipeRefreshLayout>
    </android.support.constraint.ConstraintLayout>

</layout>