<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable name="diagnose" type="com.wxsoft.fcare.core.data.entity.Diagnosis"/>
    </data>

            <android.support.constraint.ConstraintLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/title"
                        android:layout_width="14dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/ic_right_arrow"/>

                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@{diagnose.createdDate}"
                        android:textStyle="bold"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="17dp"
                        android:textColor="#000"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />

                <TextView
                        android:id="@+id/title0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="诊断医生"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="17dp"
                        android:textColor="#9399A4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                />

                <TextView
                        android:id="@+id/doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@{diagnose.doctorName}"
                        tools:text="张医生"
                        android:layout_marginLeft="80dp"
                        android:textColor="#000"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/title0"/>

                <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="病种"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="17dp"
                        android:textColor="#9399A4"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title0"
                />

                <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="@{diagnose.diagnosisCode1Name+`   `+diagnose.diagnosisCode2Name}"
                        tools:text="胸痛"
                        android:layout_marginLeft="80dp"
                        android:textColor="#000"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/title1"/>

                <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="17dp"
                        android:textColor="#9399A4"
                        app:layout_constraintLeft_toLeftOf="@id/title1"
                        app:layout_constraintTop_toBottomOf="@id/title1"/>

                <TextView
                        android:id="@+id/c1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        tools:text="74"
                        android:layout_marginLeft="80dp"
                        android:textColor="#000"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/title2"/>

                <TextView
                        android:id="@+id/c2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        tools:text="74"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        app:layout_constraintLeft_toRightOf="@+id/c1"
                        app:layout_constraintBottom_toBottomOf="@id/title2"/>

                <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="病情"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="17dp"
                        android:textColor="#9399A4"
                        app:layout_constraintLeft_toLeftOf="@id/title1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title1"/>

                <TextView
                        android:id="@+id/b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        tools:text="74"
                        android:layout_marginLeft="80dp"
                        android:textColor="#000"
                        android:text="@{diagnose.criticalLevelName}"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/title3"/>


            </android.support.constraint.ConstraintLayout>
</layout>