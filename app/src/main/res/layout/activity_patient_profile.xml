<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <import type="com.wxsoft.fcare.utils.Converter"/>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.patient.ProfileViewModel"/>
    </data>

    <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8">

            <include layout="@layout/layout_common_title"
                     android:id="@+id/title"
                     app:presenter="@{viewModel}"
            />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@{viewModel.patient.unKnown ? @color/task_done  : @color/task_undo}"
                    android:background="@{viewModel.patient.unKnown ? @color/patient_nothing_known  : @color/patient_known}"
                    android:onClick="@{()->viewModel.patientIsUnkown()}"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="三无患者"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line2"
                    app:layout_constraintTop_toBottomOf="@id/line1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:text="腕带编号"
                    android:textSize="15sp"
                    android:id="@+id/title1"
                    android:textColor="@color/edit_text_title"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>

                <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="NFC贴近腕带读取"
                        android:textSize="14sp"
                        android:text="@{viewModel.patient.wristband}"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line3"
                    app:layout_constraintTop_toBottomOf="@id/line2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="病历编号"
                        android:textSize="15sp"
                        android:id="@+id/title2"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入编号"
                        android:background="@null"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line4"
                    app:layout_constraintTop_toBottomOf="@id/line3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="患者姓名"
                        android:textSize="15sp"
                        android:id="@+id/title3"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入姓名"
                        android:text="@={viewModel.patient.name}"
                        android:background="@null"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line5"
                    app:layout_constraintTop_toBottomOf="@id/line4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="身份证号"
                        android:textSize="15sp"
                        android:id="@+id/title4"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入身份证号"
                        android:background="@null"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:text="@={viewModel.patient.idcard}"
                        android:maxLength="18"
                        android:imeOptions="actionNext"
                        android:digits="@string/input_type_chars_numbers"
                        tools:text="34260119650511XXXX"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line6"
                    app:layout_constraintTop_toBottomOf="@id/line5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="年         龄"
                        android:textSize="15sp"
                        android:id="@+id/title5"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入年龄"
                        android:background="@null"
                        android:textSize="14sp"
                        android:text="@={Converter.intToString(viewModel.patient.age)}"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line7"
                    app:layout_constraintTop_toBottomOf="@id/line6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="性         别"
                        android:textSize="15sp"
                        android:id="@+id/title6"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请选择病人性别"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line8"
                    app:layout_constraintTop_toBottomOf="@id/line7"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="发病地址"
                        android:textSize="15sp"
                        android:id="@+id/title7"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入地址"
                        android:background="@null"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:text="@={viewModel.patient.attackPosition}"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line9"
                    app:layout_constraintTop_toBottomOf="@id/line8"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="联系电话"
                        android:textSize="15sp"
                        android:id="@+id/title8"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <EditText
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请输入联系电话"
                        android:background="@null"
                        android:textSize="14sp"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:text="@={viewModel.patient.phone}"
                        android:imeOptions="actionNext"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line10"
                    app:layout_constraintTop_toBottomOf="@id/line9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="wrap_content"
                        android:text="发病时间"
                        android:textSize="15sp"
                        android:id="@+id/title9"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/title9"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:hint="请选择发病时间"
                        android:text="@={viewModel.patient.attackZone}"
                        android:textSize="14sp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    android:id="@+id/line11"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/line9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:text="上传图片 "
                        android:layout_marginTop="16.5dp"
                        android:textSize="15sp"
                        android:id="@+id/title10"
                        android:textColor="@color/edit_text_title"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:id="@+id/attachments"
                        app:layoutManager="android.support.v7.widget.GridLayoutManager"
                        app:spanCount="4"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title10"
                        app:layout_constraintLeft_toLeftOf="@id/title10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="0dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="100dp"/>
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
        <ImageView
                android:id="@+id/enlarged"
                android:background="#A9A9A9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>
    </FrameLayout>
</layout>