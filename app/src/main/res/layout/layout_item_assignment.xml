<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="@color/light_gray"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:elevation="4dp"

            android:translationZ="3dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="6dp">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/container"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="16dp"
                    tools:text="急救任务1"
                    android:text="急救任务1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="12dp"
                    tools:text="2018-12-25"
                    android:text="2018-12-25"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/task_name" />

            <View
                    android:id="@+id/task_item_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#FF909090"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/task_name"/>

            <TextView
                    android:id="@+id/task_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:textSize="12dp"
                    android:text="目的地："
                    app:layout_constraintLeft_toLeftOf="@id/task_item_line"
                    app:layout_constraintTop_toBottomOf="@id/task_item_line" />

            <TextView
                    android:id="@+id/task_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="蜀山区蜀南庭院北区12#206"
                    app:layout_constraintLeft_toRightOf="@+id/task_title1"
                    app:layout_constraintBottom_toBottomOf="@id/task_title1" />

            <TextView
                    android:id="@+id/task_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:textSize="12dp"
                    android:text="发车："
                    app:layout_constraintLeft_toLeftOf="@id/task_item_line"
                    app:layout_constraintTop_toBottomOf="@id/task_title1" />

            <TextView
                    android:id="@+id/task_dispatch_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="13:24"
                    app:layout_constraintLeft_toRightOf="@+id/task_title2"
                    app:layout_constraintBottom_toBottomOf="@id/task_title2" />


        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>
</layout>