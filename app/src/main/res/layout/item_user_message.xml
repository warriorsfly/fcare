<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="item" type="com.wxsoft.fcare.core.data.entity.Message"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="63dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            app:layout_constraintEnd_toStartOf="@id/rating"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:id="@+id/patientName"
            tools:text="张三"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            android:text="@{item.patientName}"
            app:layout_constraintBottom_toTopOf="@+id/content"
            app:layout_constraintStart_toEndOf="@id/icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintEnd_toStartOf="@id/rating"
            app:layout_constraintTop_toBottomOf="@+id/patientName"
            android:layout_marginStart="12dp"
            android:id="@+id/content"
            tools:text="AbCd"
            android:alpha="0.8"
            android:textSize="14sp"
            android:layout_marginEnd="12dp"
            android:text="@{item.messageContent}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16.5dp"
            android:id="@+id/rating"
            android:hint="2019-05-13"
            android:alpha="0.8"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{item.publishedTime.substring(0,16)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/ignoreMessage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="16.5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="忽略"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>