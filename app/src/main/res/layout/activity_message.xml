<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.message.MessageViewModel"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F8F8">

                <include layout="@layout/layout_common_title"
                         android:id="@+id/title"
                         app:presenter="@{viewModel}"
                />

                <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:tools="http://schemas.android.com/tools"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             tools:context=".ui.details.dominating.fragment.ProcessStartFragment">

                    <ImageView
                            android:id="@+id/image"
                            android:layout_width="200dp"
                            android:layout_height="168dp"
                            android:text="@string/hello_blank_fragment"
                            android:src="@drawable/ic_message_pci"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="100dp"/>

                    <TextView
                            android:id="@+id/goTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="#FE5F55"
                            tools:text="请即刻启动导管室"
                            android:drawablePadding="14dp"
                            android:drawableLeft="@drawable/ic_warning_light"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="284dp"
                            android:text="@{viewModel.message}"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="拒绝"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="500dp"
                    />

                    <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="启动导管室"
                            android:src="@drawable/ic_message_start"
                            android:layout_gravity="right"
                            android:layout_marginRight="80dp"
                            android:layout_marginTop="500dp"
                    />
                </FrameLayout>
            </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</layout>