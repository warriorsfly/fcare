<?xml version="1.0" encoding="utf-8"?>
<layout >

    <data>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.rating.RatingSubjectViewModel"/>
    </data>
    <android.support.design.widget.AppBarLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="135dp"
    tools:context=".ui.rating.RatingSubjectActivity">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/container"
                android:background="@drawable/bg_rating_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/page_title"
                    tools:text="量表评估"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="21dp"
                        android:background="@drawable/bg_rating_score"
                        android:layout_marginTop="71dp"
                        android:id="@+id/score"
                        android:text="@{String.valueOf(viewModel.rating.score)}"
                        android:gravity="center_vertical"
                        tools:text="得分 96"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        app:layout_constraintTop_toTopOf="@id/page_title"
                        app:layout_constraintBottom_toBottomOf="@id/page_title"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textSize="16sp"
                        android:text="返回"
                        android:id="@+id/back"

                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/ic_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                <!--<ImageView-->
                        <!--android:id="@+id/add_patient"-->
                        <!--app:layout_constraintTop_toTopOf="@id/page_title"-->
                        <!--app:layout_constraintBottom_toBottomOf="@id/page_title"-->
                        <!--app:layout_constraintRight_toRightOf="parent"-->
                        <!--android:src="@drawable/ic_add_circle_outline_black_24dp"-->
                        <!--android:layout_marginRight="15dp"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"/>-->

        </android.support.constraint.ConstraintLayout>
    </android.support.design.widget.AppBarLayout>
</layout>