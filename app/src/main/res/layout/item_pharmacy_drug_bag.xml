<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="item" type="com.wxsoft.fcare.core.data.entity.drug.DrugPackage"/>
        <variable name="listener" type="com.wxsoft.fcare.ui.details.pharmacy.PharmacyViewModel"/>
    </data>
    <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:elevation="2dp"
            app:cardCornerRadius="6dp">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{() ->listener.selected(item)}"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:id="@+id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="15sp"
                    android:textColor="#131D35"
                    android:text="@{item.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/checked_img"
                    goneUnless="@{item.checked}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_done_checked_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            <View
                    android:id="@+id/line"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    android:layout_marginTop="10dp"
                    android:background="@color/scrim"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/drug_bag_item_rv"
                    android:onClick="@{() ->listener.selected(item)}"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager">

            </android.support.v7.widget.RecyclerView>



        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>
</layout>