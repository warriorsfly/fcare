<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.rating.RatingActivity">
        <include layout="@layout/layout_new_title"
             android:id="@+id/title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                 app:subTitle="@{`心电图`}"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:text="心电图照片"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/titleh1"
            android:textSize="16sp"
            android:textColor="#525252"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/list"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:background="@color/line_gray"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/titleh1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/wave_line"/>

        <View
                android:id="@+id/wave_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/wave_title"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@color/line_gray"
                android:layout_height="0.5dp"/>

        <TextView
                android:id="@+id/wave_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/egg_line"
                android:layout_margin="16dp"
                android:text="实时心电曲线"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toRightOf="@id/wave_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/egg_line"
                android:layout_margin="16dp"
                android:hint="查看"
                android:textColorHint="@color/colorPrimary"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/ic_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/egg_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/egg_title"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@color/line_gray"
                android:layout_height="0.5dp"/>

        <TextView
                android:id="@+id/egg_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fmc2egg_line"
                android:layout_margin="16dp"
                android:text="EGG时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toRightOf="@id/egg_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fmc2egg_line"
                android:layout_margin="16dp"
                android:hint="2019-03-17 13:24:00"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/ic_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/fmc2egg_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fmc2egg_title"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@color/line_gray"
                android:layout_height="0.5dp"/>

        <TextView
                android:id="@+id/fmc2egg_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/memo_property_line"
                android:layout_margin="16dp"
                android:text="FM2EGG时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toRightOf="@id/fmc2egg_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/memo_property_line"
                android:layout_margin="16dp"
                android:hint="2分钟"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/ic_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <View
                android:id="@+id/memo_property_line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/memo_property_title"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:background="@color/line_gray"
                android:layout_height="012dp"/>

        <TextView
                android:id="@+id/memo_property_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/memo_title_line"
                android:layout_margin="16dp"
                android:text="@string/ecg_property_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                app:layout_constraintLeft_toRightOf="@id/memo_property_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/memo_title_line"
                android:layout_margin="16dp"
                android:hint="请选择"
                android:gravity="right|center_vertical"
                android:drawableRight="@drawable/ic_right_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        <View
            android:id="@+id/memo_title_line"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/memo_title"
            android:layout_width="match_parent"
            android:layout_marginBottom="16dp"
            android:background="@color/line_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/memo_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/memo"
            android:layout_margin="16dp"
            android:text="@string/ecg_memo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <EditText
            android:layout_margin="16dp"
            android:id="@+id/memo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:hint="请填写判读结果"
            android:textColor="#525252"
            android:gravity="left"
            android:background="@null"
            android:layout_height="192dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>