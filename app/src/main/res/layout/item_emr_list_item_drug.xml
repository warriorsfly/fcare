<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>
        <variable name="drugs" type="com.wxsoft.fcare.core.data.entity.drug.DrugRecord"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="用药时间"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
                android:id="@+id/drug_time"
                app:layout_constraintLeft_toRightOf="@+id/title1"
                app:layout_constraintBottom_toBottomOf="@+id/title1"
                android:textSize="13sp"
                android:textColor="#9399A4"
                android:layout_marginLeft="19dp"
                tools:text="2019-01-25 19:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/drugs_list"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>




    </android.support.constraint.ConstraintLayout>
</layout>