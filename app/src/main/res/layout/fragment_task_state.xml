<?xml version="1.0" encoding="utf-8"?>
<layout >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="10dp"
         tools:context=".ui.details.dominating.fragment.ProcessActivity">


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="6dp"
                android:id="@+id/date"
                android:textColor="@color/rating_red"
                android:textSize="14sp"/>

        <TimePicker
                android:id="@+id/time_picker"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false"
                android:timePickerMode="spinner"
                android:textSize="22sp"
                android:numbersInnerTextColor="@color/rating_red"
                android:numbersSelectorColor="@color/rating_red"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:padding="6dp"-->
            <!--android:drugId="@+drugId/time"-->
            <!--android:textColor="@color/rating_red"-->
            <!--android:textSize="22sp"/>-->



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:id="@+id/memo"
            android:textSize="14sp"/>

    </LinearLayout>
</layout>