<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.wxsoft.fcare.utils.Converter"/>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.patient.ProfileViewModel"/>
    </data>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.patient.PatientEmrActivity">

    <include layout="@layout/layout_common_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:id="@+id/title"
             app:presenter="@{viewModel}"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profile"
        android:background="@color/rating_red"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="115dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="张三丰"
            android:textStyle="bold"
            android:text="@{viewModel.patient.name}"
            android:id="@+id/patient_name"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="18326069632"
                android:textStyle="italic"
                android:text="@{viewModel.patient.phone}"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/patient_name"
                app:layout_constraintBottom_toBottomOf="@id/patient_name"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="男"
                android:text="@{viewModel.patient.gender==1?`男`:`女`}"
                android:id="@+id/gender"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="@id/patient_name"
                app:layout_constraintTop_toBottomOf="@id/patient_name"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/line1"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/gender"
            app:layout_constraintBottom_toBottomOf="@id/gender"
            app:layout_constraintLeft_toRightOf="@id/gender"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="24"
                android:layout_marginLeft="5dp"
                android:text="@{Converter.intToString(viewModel.patient.age)+`岁`}"
                android:id="@+id/age"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/gender"
                app:layout_constraintLeft_toRightOf="@id/line1"/>

        <View
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:id="@+id/line2"
                app:layout_constraintTop_toTopOf="@id/gender"
                app:layout_constraintBottom_toBottomOf="@id/gender"
                app:layout_constraintLeft_toRightOf="@id/age"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="合肥市"
                android:layout_marginLeft="5dp"
                android:text="@{viewModel.patient.attackPosition}"
                android:id="@+id/attack_address"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@id/line2"
                app:layout_constraintTop_toBottomOf="@id/patient_name"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="卒中"
                android:text="@{viewModel.patient.diagnosisName}"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                tools:text="距离发病时间"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:layout_marginTop="42dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>


    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="85dp"
        app:cardCornerRadius="4dp"
        android:elevation="6dp"
        app:strokeWidth="2dp"
        android:id="@+id/fragment_container"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

</layout>