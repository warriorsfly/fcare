<?xml version="1.0" encoding="utf-8"?>
<layout >
	<data>
		<import type="com.wxsoft.fcare.utils.FloatConverter"/>
		<variable name="item" type="com.wxsoft.fcare.core.data.entity.drug.DrugRecord"/>
		<variable name="viewModel" type="com.wxsoft.fcare.ui.details.thrombolysis.ThrombolysisViewModel"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:tools="http://schemas.android.com/tools"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			android:id="@+id/item_container"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/container1"
				android:background="#FFFFFF"
				android:padding="10dp"
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toTopOf="parent">

			<TextView
					android:id="@+id/drug_name"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:textSize="18sp"
					android:textColor="@color/small_title_text_gray"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="60dp"
					android:text="@{item.drugName}"
					tools:text="阿司匹林"
					app:layout_constraintLeft_toLeftOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintRight_toRightOf="parent"/>

			<ImageView
					android:id="@+id/ic_subtract"
					android:onClick="@{()->viewModel.subdelow(item)}"
					app:layout_constraintLeft_toLeftOf="@+id/drug_name"
					app:layout_constraintTop_toTopOf="@+id/drug_num"
					app:layout_constraintBottom_toBottomOf="@+id/drug_num"
					android:src="@drawable/ic_subtract"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:layout_width="25dp"
					android:layout_height="25dp"/>

			<EditText
					android:id="@+id/drug_num"
					android:selectAllOnFocus="true"
					android:layout_width="50dp"
					android:layout_height="25dp"
					android:layout_marginTop="6dp"
					android:background="@drawable/bg_emr_tv_content"
					android:textSize="14sp"
					android:layout_marginLeft="10dp"
					android:textColor="#9399A4"
					android:text="@={item.doseString}"
					android:gravity="center"
					android:maxLines="1"
					android:maxLength="4"
					android:imeOptions="actionNext"
					android:inputType="number"
					app:layout_constraintLeft_toRightOf="@+id/ic_subtract"
					app:layout_constraintTop_toBottomOf="@+id/drug_name"
					/>

			<ImageView
					android:id="@+id/ic_add"
					android:onClick="@{()->viewModel.add(item)}"
					app:layout_constraintLeft_toRightOf="@+id/drug_num"
					app:layout_constraintTop_toTopOf="@+id/drug_num"
					app:layout_constraintBottom_toBottomOf="@+id/drug_num"
					android:layout_marginLeft="10dp"
					android:src="@drawable/ic_drug_add"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:layout_width="25dp"
					android:layout_height="25dp"/>

			<TextView
					android:id="@+id/drug_unit"
					android:layout_width="80dp"
					android:layout_height="25dp"
					android:layout_marginTop="2dp"
					android:textSize="14sp"
					android:textColor="#999999"
					android:layout_marginLeft="10dp"
					android:text="@{item.doseUnit}"
					tools:text="mg"
					app:layout_constraintLeft_toRightOf="@+id/ic_add"
					app:layout_constraintTop_toTopOf="@+id/drug_num"
					/>

			<CheckBox
					android:id="@+id/check_ic"
					android:checked="@={item.checked}"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintRight_toRightOf="parent"
					android:src="@drawable/ic_delete"
					android:layout_marginRight="10dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

			<TextView
					android:id="@+id/excuteTime"
					android:layout_marginTop="6dp"
					android:text="@={item.excuteTime}"
					android:hint="选择执行时间"
					android:textColor="@color/colorPrimary"
					android:onClick="@{()->viewModel.changeTime(item)}"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toBottomOf="@id/drug_num"
					app:layout_constraintLeft_toLeftOf="@id/drug_name"
					android:padding="6dp"
					tools:text="2019-01-01 11:11:11"/>


			<TextView
					android:id="@+id/excuter"
					android:text="@{item.staffName}"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:layout_constraintTop_toTopOf="@id/excuteTime"
					app:layout_constraintRight_toRightOf="@id/check_ic"
					android:padding="6dp"
					android:hint="选择执行人员"
					android:paddingBottom="6dp"
					tools:text="王医生"/>


		</androidx.constraintlayout.widget.ConstraintLayout>
		<View android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="@color/line_gray"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>



</layout>