<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.wxsoft.fcare.utils.Converter"/>
        <variable name="item" type="com.wxsoft.fcare.core.data.entity.drug.DrugHistory"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_container"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container1"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">



            <TextView
                    android:id="@+id/drug_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="15sp"
                    android:textColor="#131D35"
                    android:text="@{item.name}"
                    tool:text="阿司匹林"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            <EditText
                    android:id="@+id/dose"
                    app:layout_constraintLeft_toRightOf="@+id/drug_name"
                    app:layout_constraintTop_toTopOf="@+id/drug_name"
                    android:background="@drawable/bg_edittextview_black_border"
                    android:hint="剂量"
                    android:maxLength="4"
                    android:text="@={Converter.intToString(item.dose)}"
                    android:textSize="14sp"
                    android:textColor="#9399A4"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_width="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/unit"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/dose"
                    app:layout_constraintLeft_toRightOf="@+id/dose"
                    android:text="mg"
                    android:textSize="14sp"
                    android:textColor="#9399A4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>