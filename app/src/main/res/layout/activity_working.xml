<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.workspace.WorkingViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_background"
        tools:context=".ui.workspace.WorkingActivity"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/appbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="13.5dp"
                android:paddingBottom="13.5dp">

            <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    tools:text="返回"
                    android:text="@{viewModel.patient.name}"
                    android:id="@+id/back"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/ic_back"
                    android:drawableTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#131D35"
                    android:id="@+id/submit"
                    android:src="@drawable/ic_clock"
                    android:layout_marginRight="16dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            app:cardCornerRadius="7.5dp"
            app:cardElevation="1dp"
            android:id="@+id/patient_info"
            app:cardBackgroundColor="#454257">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FE5F55"
                    tools:text="卒中"
                    android:text="@{viewModel.patient.diagnosisName}"
                    android:id="@+id/type"
                    android:background="@color/dark_background"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="3.5dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="12.5dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/quality"
                        android:background="#454257"
                        app:layout_constraintTop_toBottomOf="@id/type"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/margin_normal"
                        android:paddingVertical="@dimen/margin_normal"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="5"
                        tools:listitem="@layout/item_time_quality"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/patient_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/operationView"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                android:layout_marginTop="24dp"
                tools:listitem="@layout/item_work_space_operation"/>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                app:layout_constraintTop_toBottomOf="@id/appbar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_height="0dp">
            <fragment
                    android:id="@+id/emr_list"
                    android:name="com.wxsoft.fcare.ui.workspace.WorkingEmrFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                    app:behavior_skipCollapsed="true"
                    tools:layout="@layout/fragment_working_emr" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>