<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.wxsoft.fcare.utils.FloatConverter"/>
        <variable name="charge" type="com.wxsoft.fcare.core.data.entity.DisChargeDiagnosis"/>
        <variable name="item" type="com.wxsoft.fcare.core.data.entity.EmrItem"/>
        <variable name="visiable" type="Boolean"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/keyline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/emr_keyline" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/container"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                    android:id="@+id/done"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="13dp"
                    android:src="@{item.done ? @drawable/ic_emr_decoration_done : @drawable/ic_emr_decoration_undo}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginTop="3dp"
                    tools:text="12:12"
                    android:id="@+id/time"
                    app:invisibleUnless="@{item.done}"
                    android:text="@{item.completedAt}"
                    app:layout_constraintTop_toBottomOf="@id/done"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            <View
                    android:layout_width="0.5dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/time"
                    app:goneUnless="@{visiable}"
                    android:background="@color/task_undo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            app:layout_constraintStart_toEndOf="@id/keyline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/container"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="4dp"
            android:shadowRadius="2"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    tools:text="张三"
                    android:textStyle="bold"
                    android:layout_marginLeft="18dp"
                    android:textColor="#131D35"
                    android:text="@{item.name}"
                    android:layout_marginTop="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title"
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/ic_right_arrow"/>

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="诊断"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:textColor="#9399A4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
            />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="男"
                android:layout_marginLeft="80dp"
                android:textColor="#000"
                android:text="@{charge.diagnosisName}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title1"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="确诊时间"
                android:layout_marginTop="13dp"
                android:textColor="#9399A4"
                app:layout_constraintLeft_toLeftOf="@id/title1"
                app:layout_constraintTop_toBottomOf="@id/title1"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="74"
                android:layout_marginLeft="80dp"
                android:textColor="#000"
                android:text="@{charge.diagnosisTime}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title2"/>

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="住院天数"
                android:layout_marginTop="13dp"
                android:textColor="#9399A4"
                app:layout_constraintLeft_toLeftOf="@id/title1"
                app:layout_constraintTop_toBottomOf="@id/title2"/>

            <TextView
                android:id="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="342600190001013214"
                android:layout_marginLeft="80dp"
                android:textColor="#000"
                android:text="@{FloatConverter.floatToString(charge.days)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title3"/>

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="住院费用"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="10dp"
                android:textColor="#9399A4"
                app:layout_constraintLeft_toLeftOf="@id/title1"
                app:layout_constraintTop_toBottomOf="@id/title3"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/attack_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:text="342600190001013214"
                android:layout_marginLeft="80dp"
                android:textColor="#000"
                android:text="@{FloatConverter.floatToString(charge.cost)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title4"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>