<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="item" type="com.wxsoft.fcare.core.data.entity.Dictionary"/>
        <variable name="listener" type="com.wxsoft.fcare.ui.details.diagnose.DiagnoseViewModel"/>
    </data>
    <android.support.design.card.MaterialCardView
            android:id="@+id/illness_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:onClick="@{() ->listener.selectDiagnoseSon(item)}"
            android:elevation="2dp"
            app:cardCornerRadius="6dp">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="105dp"
                android:layout_height="80dp"
                android:layout_gravity="center">
            <ImageView
                    android:id="@+id/illness_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="37.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                    android:id="@+id/illness_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@{item.itemName}"
                    android:textColor="@color/white"
                    tools:text="张三"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/illness_icon"/>
            <ImageView
                    android:id="@+id/select_white_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    goneUnless="@{item.checked}"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_item_icon_illness_selectwhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="17dp"
                    android:layout_height="17dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.design.card.MaterialCardView>
</layout>