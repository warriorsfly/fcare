<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.main.fragment.patients.searchpatients.SearchPatientsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.main.fragment.patients.searchpatients.SearchPatientsActivity">

        <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:textColor="#131D35"
                android:layout_marginTop="10dp"
                android:text="    "
                android:id="@+id/back"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="45dp"/>

        <com.google.android.material.card.MaterialCardView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/back"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/search_placeholder"
                app:strokeColor="@color/light_gray"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="7.5dp"
                android:layout_marginBottom="7.5dp"
                android:elevation="2dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="6dp">
            <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    app:queryHint="请输入患者姓名"
                    app:queryBackground="@null"
                    app:iconifiedByDefault="false"
                    android:layout_height="wrap_content"/>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_placeholder"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/list"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>