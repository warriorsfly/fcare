<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.wxsoft.fcare.utils.Converter"/>
        <variable name="viewModel" type="com.wxsoft.fcare.ui.details.blood.pressure.BloodPressureViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F9"
            tools:context=".ui.details.pharmacy.selectdrugs.SelectDrugsActivity">

        <include layout="@layout/layout_new_title"
            android:id="@+id/title"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/list_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:background="@color/drug_bg_gray"
                    android:id="@+id/list"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/drugs_list"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:id="@+id/detail"
                app:layout_constraintLeft_toRightOf="@+id/list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/base_info_item5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/base_info_item4">
                    <TextView
                        android:id="@+id/item_title5"
                        android:textSize="15sp"
                        android:textColor="#131D35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="血压" />

                    <EditText android:selectAllOnFocus="true"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        android:background="@drawable/bg_edittextview_border"
                        android:hint="请填收缩压"
                        tools:text="76"
                        android:text="@={viewModel.selectedItem.dbp}"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:id="@+id/dbp"
                        android:inputType="number"
                        android:digits="@string/input_type_numbers"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/item_title5"
                        app:layout_constraintRight_toLeftOf="@id/item_mid_51"/>
                    <TextView
                        android:id="@+id/item_mid_51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        app:layout_constraintLeft_toRightOf="@+id/dbp"
                        app:layout_constraintRight_toLeftOf="@id/sbp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <EditText android:selectAllOnFocus="true"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        android:background="@drawable/bg_edittextview_border"
                        android:hint="请填舒张压"
                        android:text="@={viewModel.selectedItem.sbp}"
                        tools:text="76"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:imeOptions="actionNext"
                        android:id="@+id/sbp"
                        android:gravity="center"
                        android:inputType="number"
                        android:digits="@string/input_type_numbers"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/item_mid_51"
                        app:layout_constraintRight_toLeftOf="@+id/item_end51"/>

                    <TextView
                        android:id="@+id/item_end51"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/sbp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="mmHg" />
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/line_gray"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/base_info_item4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/base_info_item3">
                    <TextView
                        android:id="@+id/item_title4"
                        android:textSize="15sp"
                        android:textColor="#131D35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="心率" />

                    <EditText android:selectAllOnFocus="true"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/item_title4"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/bg_edittextview_border"
                        android:hint="请填写心率次数"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        android:text="@={Converter.intToString(viewModel.selectedItem.heartRate)}"
                        android:gravity="center_vertical|right"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:maxLength="3"
                        android:id="@+id/heart"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:digits="@string/input_type_numbers"
                        tools:text="67"/>
                    <TextView
                        android:id="@+id/item_end4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="次/分钟" />
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/line_gray"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:id="@+id/base_info_item6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/base_info_item4">

                    <TextView
                        android:id="@+id/item_title6"
                        android:textSize="15sp"
                        android:textColor="#131D35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="执行时间" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/item_title6"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/bg_edittextview_border"
                        android:hint="点击，选择时间"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        android:text="@={viewModel.selectedItem.timePoint}"
                        android:gravity="center_vertical|right"
                        android:layout_marginStart="8dp"
                        android:maxLines="1"
                        android:id="@+id/time"/>
                    <TextView
                        android:id="@+id/item_end6"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:textColor="#9399A4"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/ic_right_arrow"/>
                    <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@color/line_gray"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>