<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<variable name="viewModel" type="com.wxsoft.fcare.ui.details.blood.BloodViewModel"/>
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#F8F8F9">

		<include layout="@layout/layout_new_title" android:id="@+id/title"/>

		<androidx.core.widget.NestedScrollView
				android:id="@+id/baseScroll"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/title"
				app:layout_constraintBottom_toBottomOf="parent">

			<androidx.constraintlayout.widget.ConstraintLayout
					android:id="@+id/container"
					android:layout_width="match_parent"
					android:layout_height="match_parent">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:id="@+id/model3"
						android:background="@color/white"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<androidx.constraintlayout.widget.ConstraintLayout
							android:id="@+id/model3_1"
							android:background="@color/white"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toTopOf="parent"
							android:layout_width="match_parent"
							android:layout_height="50dp">

						<TextView
								android:id="@+id/title3_1"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_marginTop="15dp"
								android:layout_marginLeft="15dp"
								android:layout_marginBottom="15dp"
								android:text="采血时间"
								android:textSize="16sp"
								android:textColor="#131D35"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<Button
								android:hint="选择时间"
								style="@style/Widget.MaterialComponents.Button.TextButton"
								android:id="@+id/getting_blood"
								android:layout_marginRight="5dp"
								android:layout_marginTop="15dp"
								android:layout_marginBottom="15dp"
								android:textSize="14sp"
								android:textColor="#7D7D7D"
								android:minWidth="110dp"
								android:text="@={viewModel.blood.takingTime}"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintRight_toLeftOf="@+id/rowe3_1"
								tools:text="2019-01-18 13:23:15"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<TextView
								android:id="@+id/rowe3_1"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintBottom_toBottomOf="@id/title3_1"
								android:layout_width="14dp"
								android:layout_height="24dp"
								android:layout_marginRight="19dp"
								android:background="@drawable/ic_right_arrow"/>
						<View
								android:background="#EDEDED"
								android:layout_marginBottom="1dp"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_width="match_parent"
								android:layout_height="1dp"/>

					</androidx.constraintlayout.widget.ConstraintLayout>



					<androidx.constraintlayout.widget.ConstraintLayout
							android:id="@+id/model3_3"
							app:goneUnless="@{!viewModel.patient.diagnosisCode.equals(`215-1`)}"
							android:background="@color/white"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/model3_1"
							android:layout_width="match_parent"
							android:layout_height="50dp">

						<TextView
								android:id="@+id/title3_3"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_marginTop="15dp"
								android:layout_marginLeft="15dp"
								android:layout_marginBottom="15dp"
								android:text="血糖检测完成时间"
								android:textSize="16sp"
								android:textColor="#131D35"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<Button
								style="@style/Widget.MaterialComponents.Button.TextButton"
								android:hint="选择时间"
								android:id="@+id/end"
								android:layout_marginRight="5dp"
								android:layout_marginTop="15dp"
								android:layout_marginBottom="15dp"
								android:textSize="14sp"
								android:text="@={viewModel.blood.bloodSugarCompleteTime}"
								android:textColor="#7D7D7D"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintRight_toLeftOf="@+id/rowe3_3"
								tools:text="2019-01-18 13:23:15"
								android:minWidth="110dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<TextView
								android:id="@+id/rowe3_3"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintBottom_toBottomOf="@id/title3_3"
								android:layout_width="14dp"
								android:layout_height="24dp"
								android:layout_marginRight="19dp"
								android:background="@drawable/ic_right_arrow"/>
						<View
								android:background="#EDEDED"
								android:layout_marginBottom="1dp"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_width="match_parent"
								android:layout_height="1dp"/>

					</androidx.constraintlayout.widget.ConstraintLayout>


					<androidx.constraintlayout.widget.ConstraintLayout
							android:id="@+id/model3_5"
							android:background="@color/white"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toBottomOf="@id/model3_3"
							android:layout_width="match_parent"
							android:layout_height="50dp">

						<TextView
								android:id="@+id/title3_5"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_marginTop="15dp"
								android:layout_marginLeft="15dp"
								android:layout_marginBottom="15dp"
								android:text="标本送达时间"
								android:textSize="16sp"
								android:textColor="#131D35"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<Button
								android:hint="选择时间"
								style="@style/Widget.MaterialComponents.Button.TextButton"
								android:id="@+id/sendCheck"
								android:layout_marginRight="5dp"
								android:layout_marginTop="15dp"
								android:layout_marginBottom="15dp"
								android:textSize="14sp"
								android:textColor="#7D7D7D"
								android:minWidth="110dp"
								android:text="@={viewModel.blood.sendCheckTime}"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintRight_toLeftOf="@+id/rowe3_5"
								tools:text="2019-01-18 13:23:15"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<TextView
								android:id="@+id/rowe3_5"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintBottom_toBottomOf="@id/title3_5"
								android:layout_width="14dp"
								android:layout_height="24dp"
								android:layout_marginRight="19dp"
								android:background="@drawable/ic_right_arrow"/>
						<View
								android:background="#EDEDED"
								android:layout_marginBottom="1dp"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_width="match_parent"
								android:layout_height="1dp"/>

					</androidx.constraintlayout.widget.ConstraintLayout>

					<androidx.constraintlayout.widget.ConstraintLayout
							android:id="@+id/model3_2"
							android:background="@color/white"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toBottomOf="@id/model3_5"
							android:layout_width="match_parent"
							android:layout_height="50dp">

						<TextView
								android:id="@+id/title3_2"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_marginTop="15dp"
								android:layout_marginLeft="15dp"
								android:layout_marginBottom="15dp"
								android:text="收取血液样本时间"
								android:textSize="16sp"
								android:textColor="#131D35"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<Button
								android:hint="选择时间"
								style="@style/Widget.MaterialComponents.Button.TextButton"
								android:id="@+id/start"
								android:layout_marginRight="5dp"
								android:layout_marginTop="15dp"
								android:layout_marginBottom="15dp"
								android:textSize="14sp"
								android:textColor="#7D7D7D"
								android:minWidth="110dp"
								android:text="@={viewModel.blood.receiveTime}"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintRight_toLeftOf="@+id/rowe3_2"
								tools:text="2019-01-18 13:23:15"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<TextView
								android:id="@+id/rowe3_2"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintBottom_toBottomOf="@id/title3_2"
								android:layout_width="14dp"
								android:layout_height="24dp"
								android:layout_marginRight="19dp"
								android:background="@drawable/ic_right_arrow"/>
						<View
								android:background="#EDEDED"
								android:layout_marginBottom="1dp"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_width="match_parent"
								android:layout_height="1dp"/>

					</androidx.constraintlayout.widget.ConstraintLayout>

					<androidx.constraintlayout.widget.ConstraintLayout
							android:id="@+id/model3_4"
							android:background="@color/white"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toBottomOf="@+id/model3_2"
							android:layout_width="match_parent"
							android:layout_height="50dp">

						<TextView
								android:id="@+id/title3_4"
								app:layout_constraintLeft_toLeftOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_marginTop="15dp"
								android:layout_marginLeft="15dp"
								android:layout_marginBottom="15dp"
								android:text="血糖"
								android:textSize="16sp"
								android:textColor="#131D35"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<EditText
								style="@style/Widget.MaterialComponents.Button.TextButton"
								android:id="@+id/patient_arrive"
								android:hint="请输入血糖值"
								android:layout_marginRight="5dp"
								android:layout_marginTop="15dp"
								android:layout_marginBottom="15dp"
								android:textSize="14sp"
								android:minWidth="110dp"
								android:textColor="#7D7D7D"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintRight_toLeftOf="@+id/rowe3_4"
								tools:text="6.1"
								android:text="@={viewModel.blood.bloodSugarResult}"
								android:inputType="numberDecimal"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"/>

						<TextView
								android:id="@+id/rowe3_4"
								android:gravity="center"
								app:layout_constraintRight_toRightOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								android:layout_width="wrap_content"
								android:layout_height="24dp"
								android:textColor="#C6C7C6"
								android:layout_marginRight="19dp"
								android:text="mol"/>
						<View
								android:background="#EDEDED"
								android:layout_marginBottom="1dp"
								app:layout_constraintBottom_toBottomOf="parent"
								android:layout_width="match_parent"
								android:layout_height="1dp"/>

					</androidx.constraintlayout.widget.ConstraintLayout>

				</androidx.constraintlayout.widget.ConstraintLayout>

			</androidx.constraintlayout.widget.ConstraintLayout>

		</androidx.core.widget.NestedScrollView>

	</androidx.constraintlayout.widget.ConstraintLayout>

</layout>